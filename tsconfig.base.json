{
    "compilerOptions": {
      "declaration": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strict": true,
      "skipLibCheck": true,
      "target": "es2019",
      "jsx": "react",
    },
    "exclude": [
      "**/node_modules",
      "**/dist",
      "**/*.test.ts",
      "**/*.e2e.ts",
      "**/templates"
    ]
  }